<center>
<h1>Security Feed</h1>
<script language="javascript" type="text/javascript">setTimeout("location.reload();",20000);</script>
<br>
</center>
<div class="d-flex justify-content-start mb-3 flex-wrap p-4">
  <% @images_array.each do |image| %>
  <div class="p-3">
  <div class="image-border">
    <center>
      <div class="date-time">
        <%= image.created_at.strftime("%H:%M, %A %d %b, %Y") %>
      </div>
    </center>
    <img src="data:image/png;base64, <%=image.image_string%>" class="img-fluid" alt="Responsive image" style="width: 300px; height:220px">
  </div>
  </div>
  <% end %>
</div>
